<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content">

<ScrollView
		tools:context=".Activity.BookingFormActivity"
		android:layout_height="match_parent"
		android:layout_width="match_parent">

	<LinearLayout

		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingBottom="20dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">


			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<TextView
						android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:text="Pickup Address"
			            android:textSize="15sp"
			            android:textColor="@color/colorPrimaryText"
			            android:padding="10dp"
			            android:paddingLeft="20dp"
			            android:paddingStart="20dp"
			            android:paddingRight="20dp"
			            android:textStyle="bold"
			            app:layout_constraintStart_toStartOf="parent"
			            app:layout_constraintEnd_toEndOf="parent"
			            android:layout_marginRight="20dp"
			            android:layout_marginEnd="20dp"
			            android:id="@+id/textView"
			            app:layout_constraintHorizontal_bias="0.0"
			            app:layout_constraintTop_toTopOf="parent"
			            android:layout_marginTop="10dp"/>

				<TextView android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          android:id="@+id/edit"
				          android:text="Edit"
				          android:textColor="#2196F3"
				          android:padding="10dp"
				          android:gravity="end"
				          app:layout_constraintStart_toEndOf="@+id/textView"
				          android:layout_marginLeft="10dp"
				          android:layout_marginStart="10dp"
				          app:layout_constraintEnd_toEndOf="parent"
				          android:layout_marginRight="10dp"
				          android:layout_marginEnd="10dp"
				          app:layout_constraintTop_toTopOf="parent"
				          android:layout_marginTop="8dp"
				          app:layout_constraintHorizontal_bias="0.97"/>

			</androidx.constraintlayout.widget.ConstraintLayout>

		</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:orientation="vertical">

		<View android:layout_width="match_parent"
		      android:layout_height="2dp"
		      android:background="@color/colorDevider"
		      android:layout_marginBottom="10dp"
		      android:layout_marginLeft="20dp"
		      android:layout_marginRight="20dp"/>

	</LinearLayout>

		<LinearLayout android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		              android:orientation="horizontal"
		              android:padding="5dp">


			<ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:id="@+id/mapsImg"
					android:layout_margin="20dp"
					android:scaleType="centerCrop"
					android:background="@drawable/ic_maps"/>

			<LinearLayout android:layout_width="match_parent"
			              android:layout_height="wrap_content"
			              android:orientation="vertical">

				<TextView android:layout_width="match_parent"
				          android:layout_height="wrap_content"
				          android:text="Stasiun Rawa Buntu"
				          android:textStyle="bold"
				          android:textSize="15sp"
				          android:padding="5dp"
				          android:textColor="@color/colorPrimaryText"/>

					<TextView android:layout_width="match_parent"
					          android:layout_height="wrap_content"
					          android:text="Jl. Raya Rawa Buntu, Rw. Buntu, Kec. Serpong, Kota Tangerang Selatan, Banten 15318"
					          android:textColor="@color/colorPrimaryText"
					          android:padding="5dp"/>

			</LinearLayout>

		</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:orientation="vertical">

		<View android:layout_width="match_parent"
		      android:background="@color/colorDevider"
		      android:layout_height="2dp"
		      android:layout_marginTop="10dp"
		      android:layout_marginLeft="20dp"
		      android:layout_marginRight="20dp"/>

			<TextView android:layout_width="wrap_content"
			          android:layout_height="wrap_content"
			          android:text="Pickup Schedule"
			          android:textColor="@color/colorPrimaryText"
			          android:textSize="15sp"
			          android:textStyle="bold"
			          android:padding="10dp"
			          android:paddingLeft="20dp"
			          android:paddingStart="20dp"/>

	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:paddingStart="20dp"
	              android:orientation="horizontal"
	              android:paddingLeft="20dp"
	              tools:ignore="RtlSymmetry">

		<ImageView android:layout_width="20dp"
		           android:layout_height="20dp"
		           android:padding="5dp"
		           android:layout_margin="10dp"
		           android:background="@drawable/ic_clock"/>

		<TextView android:layout_width="wrap_content"
		          android:layout_height="match_parent"
		          android:text="Pickup Sekarang"
		          android:gravity="center"
		          android:padding="5dp"
		          android:layout_gravity="center"
		          android:clickable="true"
		          android:textColor="#2196F3"/>

		<Button android:layout_width="10dp"
		        android:layout_height="10dp"
		        android:background="@drawable/ic_arrow_down"
		        android:padding="10dp"
		        android:gravity="center"
		        android:layout_gravity="center"/>

	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:orientation="vertical">

		<View android:layout_width="match_parent"
		      android:background="@color/colorDevider"
		      android:layout_height="2dp"
		      android:layout_marginTop="10dp"
		      android:layout_marginLeft="20dp"
		      android:layout_marginRight="20dp"/>

	</LinearLayout>

	<LinearLayout android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:orientation="horizontal"
	              android:padding="5dp">

		<ImageView
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:id="@+id/product_img"
				android:layout_margin="20dp"
				android:scaleType="centerCrop"
				android:background="@drawable/kebab_photo"/>

		<LinearLayout android:layout_width="match_parent"
		              android:layout_height="wrap_content"
		              android:orientation="vertical">

			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:text="Product_name_pickup"
			          android:textStyle="bold"
			          android:textSize="15sp"
			          android:padding="5dp"
			          android:textColor="@color/colorPrimaryText"/>

			<TextView android:layout_width="match_parent"
			          android:layout_height="wrap_content"
			          android:text="description"
			          android:textColor="@color/colorPrimaryText"
			          android:padding="5dp"/>

			<LinearLayout android:layout_width="match_parent"
			              android:layout_height="wrap_content"
			              android:orientation="horizontal">

				<androidx.constraintlayout.widget.ConstraintLayout
						android:layout_width="match_parent"
						android:layout_height="match_parent">

					<Button android:layout_width="25dp"
					        android:layout_height="25dp"
					        app:layout_constraintStart_toStartOf="parent"
					        android:background="@drawable/ic_minus_disable"
					        android:enabled="true"
					        app:layout_constraintTop_toTopOf="parent"
					        app:layout_constraintEnd_toEndOf="parent"
					        app:layout_constraintHorizontal_bias="0.746"
					        android:id="@+id/decrease_button"
					        app:layout_constraintBottom_toBottomOf="parent"
					        android:layout_marginTop="5dp"
					        android:layout_marginBottom="5dp"
					        app:layout_constraintVertical_bias="0.0"/>

					<TextView android:layout_width="wrap_content"
					          android:layout_height="wrap_content"
					          android:text="1"
					          app:layout_constraintStart_toEndOf="@+id/decrease_button"
					          android:id="@+id/number"
					          android:textColor="@color/colorPrimaryText"
					          android:layout_marginLeft="12dp"
					          android:layout_marginStart="12dp"
					          app:layout_constraintTop_toTopOf="parent"
					          app:layout_constraintBottom_toBottomOf="parent"
					          app:layout_constraintEnd_toStartOf="@+id/increase_button"
					          android:layout_marginEnd="12dp"
					          android:layout_marginRight="12dp"/>

					<Button android:layout_width="25dp"
					        android:layout_height="25dp"
					        android:enabled="true"
					        android:background="@drawable/ic_plus"
					        app:layout_constraintEnd_toEndOf="parent"
					        app:layout_constraintTop_toTopOf="parent"
					        app:layout_constraintBottom_toBottomOf="parent"
					        app:layout_constraintVertical_bias="0.0"
					        android:id="@+id/increase_button"
					        android:layout_marginRight="12dp"
					        android:layout_marginEnd="12dp"
					        android:layout_marginTop="5dp"
					        android:layout_marginBottom="5dp"/>


					</androidx.constraintlayout.widget.ConstraintLayout>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</ScrollView>

	<Button android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_centerHorizontal="true"
	        android:background="@color/colorPrimary"
	        android:text="Order"
	        android:textColor="@color/white">

	</Button>

</RelativeLayout>